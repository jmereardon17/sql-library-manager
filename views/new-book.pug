extends layout

block content
  h1 New Book

  if errors
    h2.error Oooops!
    ul.error
      each error in errors
        li= error.message

  form(action="/books/new", method="post")
    div.flex
      label(for="title") Title
      input(name="title" type="text" id="title" value=book ? book.title : '' autofocus)
    div.flex
      label(for="author") Author
      input(name="author" type="text" id="author" value=book ? book.author : '')
    div.flex
      label(for="genre") Genre
      input(name="genre" type="text" id="genre" value=book ? book.genre : '')
    div.flex
      label(for="year") Year
      input(name="year" type="text" id="year" value=book ? book.year : '')
    p
      input(type="submit" value="Create New Book")
    p
      a(href="/books", class="button") Cancel